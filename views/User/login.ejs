<%- layout('/layouts/boilerplate') %>

<body>
    <div class="row mt-3">
        <div class="col col-6 offset-3">
            <h3>Login for <span style="font-family:'Dancing Script';color:#FF385C"> &nbsp;&nbsp;Wanderlust</span> &nbsp;&nbsp;:
            </h3>
            <form action="/login" method="post" novalidate class="needs-validation">
                
                <div class="mt-3">
                    <label for="username">username:</label>
                    <input type="text" name="username" id="username" class="form-control" required>
                </div>
                <div class="mt-3">
                    <label for="password">password:</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                </div>
                
                <button class="mt-4 update px-2 py-2" type="submit">login</button>
            </form>
        </div>
    </div>

</body>