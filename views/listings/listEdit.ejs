<%- layout("/layouts/boilerplate")%>

    <body>
        <div class="row mt-3">
            <div class="col col-6 offset-3">
                <h3>Edit Details :
                </h3>
                <form action="/listings/<%=editingList._id%>?_method=PATCH" method="post" novalidate
                    class="needs-validation" enctype="multipart/form-data">
                    <div class="mt-3">
                        <label for="title">Title:</label>
                        <input type="text" name="title" placeholder="enter destination name" id="title"
                            value=<%=editingList.title%>
                        class="form-control" required>
                        <div class="invalid-feedback">Enter valid title </div>
                    </div>
                    <div class="mt-3">
                        <label for="des">Description:</label>
                        <textarea class="form-control" name="description" id="des" class="form-control"
                            required><%=editingList.description%></textarea>
                        <div class="invalid-feedback">Desciption needed </div>
                    </div>
                   
                        <label for="image">Image:</label>
                         <div>
                        <img src="<%= OriginalPath%>" alt="<%=editingList.image.filename%>">
                        </div>
                         <div class="mt-3">
                        <input type="file" id="image" name="url" 
                        class="form-control" >
                        <!-- <div class="invalid-feedback">Image not found </div> -->
                    </div>
                    <div class="row mt-3">
                        <div class="col-4">
                            <label for="price">Price:</label>
                            <input type="number" name="price" placeholder="price" id="price"
                                value=<%=editingList.price%>
                            class="form-control" required>
                            <div class="invalid-feedback">Enter valid price </div>
                        </div>
                        <div class="col-4">
                            <label for="location">Location:</label>
                            <input type="text" name="location" placeholder="enter destination location" id="location"
                                value=<%=editingList.location%> class="form-control" required>
                            <div class="invalid-feedback">Enter valid location</div>
                        </div>
                        <div class="col-4">
                            <label for="country">Country:</label>
                            <input type="text" name="country" placeholder="enter destination country" id="country"
                                value=<%=editingList.country%> class="form-control" required>
                            <div class="invalid-feedback">Enter valid country </div>
                        </div>
                    </div>



                    <button class="my-4 update px-2 py-2" type="submit">update</button>
                </form>
            </div>
        </div>

    </body>

    </html>